<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.StopCarActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B8DEE8">

        <ImageView
            android:id="@+id/iv_return_activity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/returnactivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="停车查询"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="当前停车费率："
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_current_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_current"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:textColor="#fff"
            android:background="@drawable/selector_btn"
            android:text="查询"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="修改停车费率："
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_rate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:gravity="center"
            android:hint="费率"
            android:inputType="number"
            android:maxLength="2"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_unit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:gravity="center"
            android:hint="计价单位"
            android:inputType="text"
            android:maxLength="5"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_setting_rate"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:textColor="#fff"
            android:background="@drawable/selector_btn"
            android:text="设置"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="当前车位查询"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_search_park"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:textColor="#fff"
            android:background="@drawable/selector_btn"
            android:text="查询"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_parkfree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_park1"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一号车位"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/ll_parkfree"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_park2"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二号车位"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>